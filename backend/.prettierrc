{
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 4,
    "semi": true,
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": ["*js", "*jsx", "*.ts", "*.tsx"],
            "options": {
                "semi": false
            }
        }
    ],
    "plugins": ["prettier-plugin-solidity"]
}
